{
  "name": "meteorology-api",
  "version": "1.0.0",
  "description": "Api in typescript for forecasting sea wave conditions for surfing",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js | pino-pretty -c",
    "start:dev": "ts-node-dev --transpile-only src/index.ts  | pino-pretty -c",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gdserafini/meteorology-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gdserafini/meteorology-api/issues"
  },
  "homepage": "https://github.com/gdserafini/meteorology-api#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.0",
    "@types/axios": "^0.14.0",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.4.0",
    "@types/jest-cli": "^24.3.0",
    "@types/module-alias": "^2.0.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^18.14.0",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-jest": "^29.4.3",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "nock": "^13.3.0",
    "pino-pretty": "^9.4.0",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@babel/preset-env": "^7.20.2",
    "@overnightjs/core": "^1.7.6",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "axios": "^1.3.3",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "jest-cli": "^29.3.1",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.10.0",
    "pino": "^8.11.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
